style.
    input[type=checkbox] {
        /* Double-sized Checkboxes */
        -ms-transform: scale(2); /* IE */
        -moz-transform: scale(2); /* FF */
        -webkit-transform: scale(2); /* Safari and Chrome */
        -o-transform: scale(2); /* Opera */
        padding: 10px;
    }

    .title-anchor:hover {
        text-decoration:underline;
    }

// all the details including title

// UPLOAD TITLE
a.title-anchor(href=`/user/${upload.uploader.channelUrl || channelUrl}/${upload.uniqueTag}` style="color:black" target="_parent")
    div
        p.balance-text.upload-title-text(style="width:100%;margin:0 auto;margin-top:11px;margin-bottom:7px;color:darkgray;") #{upload.title} &nbsp

            if upload.fileType == 'video'
                i.fa.fa-video-camera(aria-hidden='true' style="margin:0 auto;text-align:center;display:inline;")
            else if upload.fileType == 'audio'
                i.fa.fa-volume-up(aria-hidden='true' style="margin:0 auto;text-align:center;display:inline;")
            else if upload.fileType == 'image'
                i.fa.fa-picture-o(aria-hidden='true' style="margin:0 auto;text-align:center;display:inline;")

// shows view amount, username and if recent also time ago
div.random-thing(style="margin-top:-4px;")
    // view amount
    p.upload-title-text.views-text(style="margin:0 auto;text-align:center;display:inline;color:darkgray;") #{upload.legitViewAmount} views &nbsp
        // upload time ago

        // if its not sorted by popular (aka recent or other thing on user page)
        if !within
            p.upload-title-text.views-text(style="margin:0 auto;text-align:center;display:inline;")
                a.upload-user-text.views-text(href=`/user/${upload.uploader.channelUrl}` style="margin:0;text-align:center;display:inline;color:darkgray;" target="_parent") #{upload.uploader.channelName || upload.uploader.channelUrl}

            p.upload-title-text.views-text(style="margin:0 auto;text-align:center;display:inline;color:darkgray;") &nbsp uploaded #{upload.timeAgo} &nbsp

            // if sorted by popular
        else
            // username
            p.upload-title-text.views-text(style="margin:0 auto;text-align:center;display:inline;") &nbsp
                a.upload-user-text.views-text(href=`/user/${upload.uploader.channelUrl}` style="margin:0;text-align:center;display:inline;color:darkgray;" target="_parent") #{upload.uploader.channelName || upload.uploader.channelUrl}


// show views within time if on popular page
div.upload-thing
    if within
        p.upload-title-text.views-text(style="margin-top:-8px;color:darkgray;") #{upload[popularTimeViews]} #{withinDisplayString}




